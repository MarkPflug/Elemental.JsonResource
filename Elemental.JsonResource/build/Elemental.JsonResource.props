<?xml version="1.0" encoding="utf-8" ?>
<Project
	xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<JsonResourceTaskAssembly Condition="'$(JsonResourceTaskAssembly)' == ''">net461\Elemental.JsonResource.dll</JsonResourceTaskAssembly>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<Compile>
			<Generator>MSBuild:GenerateJsonResource</Generator>
		</Compile>
		<JsonResource>
			<Generator>MSBuild:GenerateJsonResource</Generator>
		</JsonResource>
	</ItemDefinitionGroup>

	<ItemGroup>
		<JsonResource Include="**\*.resj"/>
		<Compile Include="@(JsonResource)"/>
	</ItemGroup>

</Project>