<?xml version="1.0" encoding="utf-8" ?>
<Project
	xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<JsonResourceTaskAssembly Condition="'$(JsonResourceTaskAssembly)' == ''">$(MSBuildThisFileDirectory)netstandard1.6\Elemental.JsonResource.dll</JsonResourceTaskAssembly>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<JsonResource>
			<Generator>MSBuild:GenerateJsonResource</Generator>
		</JsonResource>
	</ItemDefinitionGroup>

	<ItemGroup>
		<None Remove="**/*.resj"/>
		<JsonResource Include="**/*.resj"/>
	</ItemGroup>

</Project>